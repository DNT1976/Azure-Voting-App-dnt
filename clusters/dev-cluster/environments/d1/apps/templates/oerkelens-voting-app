

apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: oerkelens-voting-app
  namespace: argocd
  finalizers:
  - resources-finalizer.argocd.argoproj.io
spec:
  destination:
    namespace: oerkelens
    server: {{ .Values.spec.destination.server }}
  project: default
  sources:
    - repoURL: 'https://hub.docker.com/repositories/oerkelens'
      targetRevision:  {{ .Values.spec.oerkelens-voting-app.helmchartVersion }}
      chart: azure-vote-app
      helm:
        valueFiles:
        - {{ printf "$values/clusters/%s/utilities/values/oerkelens-voting-app-values.yaml" .Values.spec.cluster | quote }}
    - repoURL: 'https://github.com/daseth/gitops.git'
      targetRevision: main
      ref: values
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
    - CreateNamespace=true
